{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": []
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**"
            ]
        },
        "test": {
            "dependsOn": [
                "^test"
            ],
            "outputs": []
        },
        "lint": {
            "dependsOn": [],
            "outputs": []
        }
    }
}